#!usr/bin/env php
<?php

declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';
require_once __DIR__ . '/../src/Script.php';

use Lexgur\GondorGains\Exception\ScriptFailedToRunException;
use Lexgur\GondorGains\Script;

$scriptClass = $argv[1] ?? '';
if (empty($scriptClass)) {
    throw new ScriptFailedToRunException('No script provided');
}
$script = new Script();
$script->run($scriptClass);
